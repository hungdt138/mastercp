				if (balanceAmount > 0)
				{
					// vnmMessage.setSubscriberRetrieve(subscriberRetrieve);
					vnmMessage.setSubscriberType(Constants.PREPAID_SUB_TYPE);

					// Calendar currentActiveDate =
					// subscriberEntity.getDateEnterActive();
